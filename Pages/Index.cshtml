@page
@model IndexModel
@{
    ViewData["Title"] = "Cat Facts";
}

<h1>Cat Fact Generator</h1>

<form method="post">
    <button type="submit" class="btn btn-primary">Pobierz fakt o kocie</button>
</form>

@if (Model.CatFact != null)
{
    <p><strong>Fakt:</strong> @Model.CatFact</p>
}

<form method="post" asp-page-handler="ShowHistory">
    <button type="submit">Pokaż historię faktów</button>
</form>

@if (Model.AllFacts != null && Model.AllFacts.Length > 0)
{
    <h3>Historia faktów o kotach:</h3>
    <ul>
        @foreach (var fact in Model.AllFacts)
        {
            <li>@fact</li>
        }
    </ul>
}

